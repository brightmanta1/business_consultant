{
    "version": 2,
    "builds": [
        {
            "src": "api_app.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "50mb",
                "runtime": "python3.12"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "api_app.py"
        },
        {
            "src": "/(.*)",
            "dest": "api_app.py"
        }
    ],
    "env": {
        "PYTHONPATH": ".",
        "PYTHONUNBUFFERED": "1"
    },
    "build": {
        "env": {
            "PYTHONUNBUFFERED": "1"
        }
    }
} 